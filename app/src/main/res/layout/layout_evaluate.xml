<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1">
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/list_evaluateIcon"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/flowerimage"/>

        <LinearLayout
            android:layout_toRightOf="@+id/list_evaluateIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/list_evaluateUserName"
                android:text="Apersonalive"
                android:textSize="13dp"
                android:textColor="@android:color/darker_gray"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

                <TextView
                    android:paddingTop="5dp"
                    android:id="@+id/list_evaluateContent"
                    android:text="内容"
                    android:textSize="12dp"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/list_evaluateContentDate"
            android:text="2018-05-20 13:14"
            android:textSize="12dp"
            android:textColor="@android:color/darker_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>