<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#EDF1F2">
    <View
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#2ccaab"/>
    <RelativeLayout
        android:id="@+id/menu_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white">
        <com.fos.util.SpringIndicator.SpringIndicator
            android:id="@+id/indicator"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:siTextSize="18sp"
            app:siIndicatorColors="@array/indicator_colors"
            app:siTextColor="@color/colorPrimaryDark"
            app:siSelectedTextColor="@android:color/white"
            app:siIndicatorColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
        </com.fos.util.SpringIndicator.SpringIndicator>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:background="@android:color/transparent"
            android:weightSum="1">

            <TextView
                android:id="@+id/menu_temp"
                android:text="温度"
                style = "@style/menu_data" />
            <TextView
                android:id="@+id/menu_hum"
                android:text="湿度"
                style = "@style/menu_data" />
            <TextView
                android:id="@+id/menu_soilHum"
                android:text="土壤湿度"
                style = "@style/menu_data" />
            <TextView
                android:id="@+id/menu_lux"
                android:text="光强"
                style = "@style/menu_data" />
        </LinearLayout>
    </RelativeLayout>

    <com.fos.util.MyViewPager
        android:id="@+id/vp_data"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:layout_below="@+id/menu_data"
        >
    </com.fos.util.MyViewPager>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/stroke_data"
        >
        <ImageView
            android:id="@+id/image_flowerInfo"
            android:layout_marginLeft="20dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/flowerimage"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">
            <TextView
                android:id="@+id/data_flowerName"
                android:text="向日葵"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/data_flowerName_g"
                android:text="向日葵"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/data_flowerName"/>
            <TextView
                android:id="@+id/data_date"
                android:text="已监测4天"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/data_flowerName"
                android:layout_toRightOf="@+id/data_flowerName_g"/>

        </RelativeLayout>

        <ImageView
            android:layout_marginLeft="90dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_back_w"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/stroke_data"
                android:layout_weight="0.5">
                <ImageView
                    android:id="@+id/ic1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/ic_sun"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/str1"
                    android:text="光照"
                    android:layout_toRightOf="@+id/ic1"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/level_light"
                    android:text="合适"
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/black"
                    android:layout_toRightOf="@+id/str1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/show_light"
                    android:layout_toRightOf="@+id/ic1"
                    android:layout_below="@+id/str1"
                    android:layout_width="60dp"
                    android:layout_height="5dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="1">
                    <View
                        android:layout_width="0dp"
                        android:layout_height="5dp"
                        android:layout_weight="0.2"
                        android:background="@drawable/round_view_gray"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="5dp"
                        android:layout_weight="0.6"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:background="@drawable/round_view_green"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="5dp"
                        android:layout_weight="0.2"
                        android:background="@drawable/round_view_gray"/>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/stroke_data"
                android:layout_weight="0.5">
                <ImageView
                    android:id="@+id/ic2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/ic_shuidi"/>

                <TextView
                    android:id="@+id/str2"
                    android:text="湿度"
                    android:layout_toRightOf="@+id/ic2"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/level_water"
                    android:text="合适"
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/black"
                    android:layout_toRightOf="@+id/str2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/show_water"
                    android:layout_toRightOf="@+id/ic2"
                    android:layout_below="@+id/str2"
                    android:layout_width="60dp"
                    android:layout_height="5dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="1">
                    <View
                        android:layout_width="0dp"
                        android:layout_height="5dp"
                        android:layout_weight="0.2"
                        android:background="@drawable/round_view_gray"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="5dp"
                        android:layout_weight="0.6"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:background="@drawable/round_view_green"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="5dp"
                        android:layout_weight="0.2"
                        android:background="@drawable/round_view_gray"/>

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/stroke_data"
                android:layout_weight="0.5">
                <ImageView
                    android:id="@+id/ic3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/ic_wenduji"/>

                <TextView
                    android:id="@+id/str3"
                    android:text="温度"
                    android:layout_toRightOf="@+id/ic3"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/level_tem"
                    android:text="过高"
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/black"
                    android:layout_toRightOf="@+id/str3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/show_tem"
                    android:layout_toRightOf="@+id/ic3"
                    android:layout_below="@+id/str3"
                    android:layout_width="60dp"
                    android:layout_height="5dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="1">
                    <View
                        android:layout_width="0dp"
                        android:layout_height="5dp"
                        android:layout_weight="0.2"
                        android:background="@drawable/round_view_gray"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="5dp"
                        android:layout_weight="0.6"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:background="@drawable/round_view_gray"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="5dp"
                        android:layout_weight="0.2"
                        android:background="@drawable/round_view_red"/>

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/stroke_data"
                android:layout_weight="0.5"
                >
                <ImageView
                    android:id="@+id/ic4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/ic_feili"/>

                <TextView
                    android:id="@+id/str4"
                    android:text="肥力"
                    android:layout_toRightOf="@+id/ic4"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/level_nut"
                    android:text="较差"
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/black"
                    android:layout_toRightOf="@+id/str4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/show_nut"
                    android:layout_toRightOf="@+id/ic4"
                    android:layout_below="@+id/str4"
                    android:layout_width="60dp"
                    android:layout_height="5dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="1">
                    <View
                        android:layout_width="0dp"
                        android:layout_height="5dp"
                        android:layout_weight="0.2"
                        android:background="@drawable/round_view_red"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="5dp"
                        android:layout_weight="0.6"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:background="@drawable/round_view_gray"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="5dp"
                        android:layout_weight="0.2"
                        android:background="@drawable/round_view_gray"/>

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>




</LinearLayout>