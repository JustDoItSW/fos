<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fos.activity.RecordControlActivity"
    android:background="#1b3a3d">

    <ListView
        android:id="@+id/list_record"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

    </ListView>

    <RelativeLayout
        android:id="@+id/exit_record"
        android:layout_marginLeft="15dp"
        style="@style/tab_menu_text">
        <ImageView
            android:src="@mipmap/ic_back_g"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <com.fos.myView.WaveView
            android:id="@+id/wave_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            />
        <RelativeLayout
            android:id="@+id/btn_record"
            android:layout_centerInParent="true"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/round_view_stroke_white"
            android:clipChildren="false"
            >
            <ImageView
                android:id="@+id/img_record"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/record"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </RelativeLayout>



</RelativeLayout>
