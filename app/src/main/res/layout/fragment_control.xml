<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#EDF1F2">

    <!--<View-->
        <!--android:layout_width="200dp"-->
        <!--android:layout_height="200dp"-->
        <!--android:background="@drawable/round_view"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:layout_gravity="center"/>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@android:color/black"/>
        <TextView
            android:id="@+id/text_temp"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="温度："
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/text_hum"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="湿度："
            android:layout_below="@+id/text_temp"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/text_lux"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="光强："
            android:layout_below="@+id/text_hum"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/text_soilHum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="土湿："
            android:layout_below="@+id/text_lux"
            android:textColor="@android:color/white"
            android:textSize="12dp"/>
        <TextView
            android:id="@+id/text_waterHigh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="水位："
            android:layout_below="@+id/text_soilHum"
            android:textColor="@android:color/white"
            android:textSize="12dp"/>


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_login"
            android:text="登录"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_cancellation"
            android:text="注销"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"/>
        <EditText
            android:id="@+id/ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:focusable="false"/>
        <EditText
            android:id="@+id/port"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:focusable="false"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_query"
                    android:text="查询 "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_ledOpen"
                    android:text="开灯"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/btn_ledClose"
                    android:text="关灯"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_watering"
                    android:text="浇水"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btn_noWatering"
                    android:text="停止"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_heating"
                    android:text="加热"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btn_noHeating"
                    android:text="停止"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="100dp">
            <com.github.onlynight.waveview.WaveView
                android:id="@+id/waveView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:isCircle="true"
                app:period="2"
                app:waveHeightPercent="0.5"
                app:waveRange="6dp"
                app:waveSpeed="5"
                app:waveStrokeWidth="1dp"/>
            <TextView
                android:id="@+id/text1111"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0.0%"/>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
