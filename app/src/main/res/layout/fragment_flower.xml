<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/ThemeColor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EeF2F3"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="植物志"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:weightSum="1"
            android:background="@drawable/search_edit"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.06"
                android:layout_height="18dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/ic_search"
                android:layout_gravity="center_vertical"
                />
            <EditText
                android:id="@+id/edit_search"
                android:textSize="13dp"
                android:paddingLeft="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="0.87"
                android:layout_height="wrap_content"
                android:hint="输入植物名称进行搜索"
                android:background="@android:color/white"
                android:imeOptions="actionSearch"
                android:textColorHint="#bfbfbf"
                android:inputType="text"
                android:maxLines="1"/>

            <ImageView
                android:id="@+id/delSearch"
                android:layout_width="0dp"
                android:layout_weight="0.06"
                android:layout_height="18dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/ic_delsearch"
                android:layout_gravity="center_vertical"
                android:visibility="gone"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <View
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="0.125dp"
                android:layout_gravity="center"
                android:background="#C0C0C0"/>

            <TextView
                android:text="人气植物Top20"
                android:textSize="13dp"
                android:textColor="#909090"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="0.125dp"
                android:layout_gravity="center"
                android:background="#C0C0C0"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/list_flowerData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">
                </ListView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_notFind"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/ic_flowernamenofind"
                    />
                <TextView
                    android:text="植物库中没有找到"
                    android:textSize="13dp"
                    android:textColor="#909090"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/text_notFind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </RelativeLayout>



    </LinearLayout>


</LinearLayout>
