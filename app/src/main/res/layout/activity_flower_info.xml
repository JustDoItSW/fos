<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EeF2F3"
    tools:context="com.fos.activity.FlowerInfo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:background="#2ccaab"
        android:weightSum="1">

        <RelativeLayout
            android:id="@+id/exit_flowerInfo"
            android:layout_marginLeft="15dp"
            style="@style/tab_menu_text">
            <ImageView
                android:src="@mipmap/ic_back_w"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </RelativeLayout>
        <TextView
            android:id="@+id/table_flowerInfo"
            android:text="植物信息"
            android:textSize="15dp"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4">

            <ImageView
                android:id="@+id/image_flowerInfo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/flowerimage"/>

            <TextView
                android:id="@+id/flowerName_info"
                android:layout_below="@+id/image_flowerInfo"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:text="葫芦"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.58"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <View
                android:background="#bfbfbf"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"/>
            <TextView
                android:text="基本信息"
                android:textColor="#bfbfbf"
                android:textSize="12dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:background="#bfbfbf"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"/>

            <ListView
                android:id="@+id/list_flowerInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"></ListView>

            <View
                android:background="#bfbfbf"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_finish"
            android:text="完成"
            android:textColor="#2ccaab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_finish"/>

    </LinearLayout>



</LinearLayout>
